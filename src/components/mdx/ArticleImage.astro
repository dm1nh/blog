---
import type { ImageMetadata } from "astro"
import { Image } from "astro:assets"

interface Props {
  src: string | ImageMetadata
  alt: string
}

const { src, alt } = Astro.props
---

<figure class="space-y-1 text-muted-foreground">
  {
    typeof src === "string" ? (
      <img src={src} alt={alt} class="rounded-lg" />
    ) : (
      <Image {src} {alt} class="rounded-lg" />
    )
  }
  {alt && <figcaption class="text-center text-base">{alt}</figcaption>}
</figure>
