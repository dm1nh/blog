---
import type { CollectionEntry } from "astro:content"
import Icon from "./Icon.astro"
type Props = CollectionEntry<"tags">
const { id, data } = Astro.props
---

<a
  href={`/tags/${id}`}
  class="flex items-center space-x-2 rounded bg-foreground/10 px-2 py-1 text-sm font-medium text-foreground shadow duration-100 hover:bg-foreground/15"
>
  <Icon name={`tags/${id}`} class="h-4 w-4" />
  <span>{data.name}</span>
</a>
